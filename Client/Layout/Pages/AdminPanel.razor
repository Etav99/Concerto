@page "/admin"

@attribute [Authorize]

@inject IAppSettingsService AppSettingsService

<PageTitle>Admin panel</PageTitle>

	<MudTabs @ref="_tabs" Outlined="true" Position="Position.Top"
	         ApplyEffectsToContainer="true" Class="" PanelClass="panel-height-maximum" Style="height: calc(100%);">

		<MudTabPanel Text="Unverified users">
			<UserManager Unverified="true" Style="height: 100%;" />
		</MudTabPanel>

		<MudTabPanel Text="All users">
			<UserManager Style="height: 100%;" />
		</MudTabPanel>

		<MudTabPanel>
			<TabContent>
			<MudLink Color="Color.Default" Underline="Underline.None" Target="_blank" Href="@AppSettingsService.AppSettings.AdminConsoleUrl">
					<MudStack Row="true" Class="">
						<MudText Typo="Typo.body2">More</MudText>
						<MudIcon Size="Size.Small" Icon="@Icons.Material.Filled.OpenInNew" />
					</MudStack>
			</MudLink>
			</TabContent>
		</MudTabPanel>
		
	</MudTabs>

@code {
	MudTabs? _tabs;
}