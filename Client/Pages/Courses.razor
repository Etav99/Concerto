@attribute [Authorize]
@page "/courses"
@using Concerto.Shared.Client.Services
@using Microsoft.AspNetCore.Authorization
@using Concerto.Shared.Client.Components.Lists

@inject NavigationManager NavigationManager
@inject IDialogService DialogService
@inject IJSRuntime JsRuntime
@inject ISnackbar Snackbar

@inject IBreadcrumbsService BreadcrumbsService
@inject ICourseService CourseService


<PageTitle>Courses</PageTitle>

<CoursesList OnCourseSelected="SelectCourse"/>

@code {

	private void SelectCourse(long courseId)
	{
		NavigationManager.NavigateTo($"courses/{courseId}");
	}

}