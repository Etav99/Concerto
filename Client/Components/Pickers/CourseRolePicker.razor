@using Concerto.Shared.Models.Dto;

<MudSelect T="CourseUserRole" Margin="Margin.Dense" Dense="true" Value="Value" ValueChanged="ValueChanged" Label="Role" AnchorOrigin="Origin.BottomCenter">
    <MudSelectItem Value="@(CourseUserRole.Admin)">Administrator</MudSelectItem>
    <MudSelectItem Value="@(CourseUserRole.Supervisor)">Supervisor</MudSelectItem>
    <MudSelectItem Value="@(CourseUserRole.Member)">Member</MudSelectItem>
</MudSelect>


@code {
    [Parameter]
    public CourseUserRole Value { get; set; }
    [Parameter]
    public EventCallback<CourseUserRole> ValueChanged { get; set; }

    [Parameter]
    public EventCallback<CourseUserRole> OnChange { get; set; }

    async Task Selected(CourseUserRole role)
    {
        await ValueChanged.InvokeAsync(role);
        await OnChange.InvokeAsync(role);
    }
}
